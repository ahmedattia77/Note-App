<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/my_style2"
    android:orientation="vertical"

    >

   <com.google.android.material.card.MaterialCardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <TextView
        android:id="@+id/note_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English course"
        android:textSize="18sp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/note_des_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_title_tv"
        android:text="English course"
        android:textSize="16sp"
        android:textColor="@color/my_style4"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:id="@+id/note_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_des_tv"
        android:text="yasterday"
        android:textColor="@color/my_style4"
        android:layout_marginTop="6dp"
        />

   </com.google.android.material.card.MaterialCardView>
</LinearLayout>